<Project>

  <PropertyGroup>
    <ChromiumVersion>4355</ChromiumVersion>
    <CSharpPackageVersion>1.0</CSharpPackageVersion>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Curiosity GmbH, Tobias Meyer, Vita Tauer</Authors>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/nothrow/PDFiumSharp</RepositoryUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <IsPackable>false</IsPackable>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
    <GitVersionBaseDirectory>$(MSBuildThisFileDirectory)</GitVersionBaseDirectory>

    <VersionPrefix>$(CSharpPackageVersion).$(ChromiumVersion)</VersionPrefix>

  </PropertyGroup>

  <ItemGroup>
    <SourceRoot Include="$(MSBuildThisFileDirectory)/"/>
  </ItemGroup>

</Project>
